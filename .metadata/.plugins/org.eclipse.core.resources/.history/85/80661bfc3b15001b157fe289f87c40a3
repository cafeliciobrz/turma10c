package Repeticao;

public class ExemploFor {

	public static void main(String[] args) {
		/*
		 * For: utilizarmos, normalmente quando não há interação do usuário com a repetição
		 * Sintaxe:
		 * 1 Parametro: inicio da repetição ocm a definição do contador
		 * 2 Parametro: condição, ou seja, até quando o laço vai ser executado
		 * 3 Parametro: qual a forma da contagem
		 */
		int tabuada = Integer.parseInt(JOptionPane.showImputDialog("Digite um valor"));
		// 8 x 1 = 8
		// 8 x 2 = 16
		for (int contador=1;contador<11;contador++) {
			System.out.println(tabuada + " x " + contador + " = " + (tabuada * contador));
			
		}

	}

}
