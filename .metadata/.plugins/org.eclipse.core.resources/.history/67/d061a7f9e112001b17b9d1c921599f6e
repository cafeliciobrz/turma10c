package Decisao;

import javax.swing.JOptionPane;

public class DecisaoEncadeada {

	public static void main(String[] args) {
		// Imput -> nome aluno, disciplina, duas notas
		// Exibir o nome do aluno, a média e a disciplina
		// Entrar dia 02 - Número de faltas onde maior que 20 reprovado
		byte alunofalta = Byte.parseByte(JOptionPane.showInputDialog("Digite a quantidade de faltas do aluno"));
		if (alunofalta>20) {
			JOptionPane.showMessageDialog(null, "O aluno " + alunonome+ " na disciplina " + alunodisc + " fechou com média " + alunomedia + " esta com número de faltas = " + alunofalta + " e foi reprovado");
		}else
		String alunonome = JOptionPane.showInputDialog("Informe nome do Aluno");
		String alunodisc = JOptionPane.showInputDialog("Informe nome da Disciplina");
		float alunonota1 = Float.parseFloat(JOptionPane.showInputDialog("Digite o valor Nota 1"));
		float alunonota2 = Float.parseFloat(JOptionPane.showInputDialog("Digite o valor Nota 2"));
		float alunomedia = (alunonota1+alunonota2)/2;
		if (alunomedia>6) {
			JOptionPane.showMessageDialog(null, "O aluno " + alunonome+ " na disciplina " + alunodisc + " fechou com média " + alunomedia + " esta com número de faltas = " + alunofalta + " e foi aprovado");
		}else if (alunomedia<4) {
			JOptionPane.showMessageDialog(null, "O aluno " + alunonome+ " na disciplina " + alunodisc + " fechou com média " + alunomedia + " esta com número de faltas = " + alunofalta + " e foi reprovado");
		}else {
			JOptionPane.showMessageDialog(null, "Você ainda tem CHANCE!!!");
		}
		//Mesma linha para System.out 
		//System.out.printf("%s sua média na disciplina %s foi de %.2f",alunonome,alunodisc,alunomedia);

		//Coloca em uma janela fora e o null vai centralizar a caixa de saída com seu monitor
		//JOptionPane.showMessageDialog(null, alunonome + "\n" + alunodisc + "\n" + alunomedia);

	}

}
