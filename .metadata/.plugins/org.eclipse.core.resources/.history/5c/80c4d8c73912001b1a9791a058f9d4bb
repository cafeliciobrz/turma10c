package variaveis;

import javax.swing.JOptionPane;

public class Notas {

	public static void main(String[] args) {
		// Imput -> nome aluno, disciplina, duas notas
		// Exibir o nome do aluno, a média e a disciplina
		String alunonome = JOptionPane.showInputDialog("Informe nome do Aluno");
		String alunodisc = JOptionPane.showInputDialog("Informe nome da Disciplina");
		double alunonota1 = Double.parseDouble(JOptionPane.showInputDialog("Digite o valor Nota 1"));
		double alunonota2 = Double.parseDouble(JOptionPane.showInputDialog("Digite o valor Nota 2"));
		double alunomedia = (alunonota1+alunonota2)/2;
		System.out.println("Nome  do Alune......:" + alunonome);
		System.out.println("Nome  da Disciplina.:" + alunodisc);
		System.out.println("Média ..............:" + alunomedia);


	}

}
