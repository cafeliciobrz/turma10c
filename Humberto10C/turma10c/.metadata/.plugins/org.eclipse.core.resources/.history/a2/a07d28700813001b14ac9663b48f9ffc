package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {

	public static void main(String[] args) {
		
		int numero = Integer.parseInt(JOptionPane.showInputDialog("Número a ser advinhado"));
		int chute = 0;
		do {
			chute = Integer.parseInt(JOptionPane.showInputDialog("Advinhe o número"));
		}while(numero!=chute);
		/*
		 * Um jogo de advinhação.
		 * O jogador 1 digita um número inteiro
		 * O jogador 2 tem que advinhar o número que foi digitado pelo jogador 1
		 * Enquanto ele não acertar o jogo continua perguntando o número.
		 * 
		 * Etapa2:
		 * Acrescente uma contagem de tentativas do jogador 2, e apresente
		 * quantas tentativas ele usou para acertar o número
		 * 
		 * Etapa3:
		 * Acrescente dicas, para o jogador 2, indicando se o número que 
		 * ele está tentando advinhar é maior ou menor do que o que ele chutou.
		 * 
		 */

	}

}
